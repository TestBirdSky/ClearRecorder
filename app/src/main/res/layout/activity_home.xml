<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gr_bg_100"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
       android:layout_weight="1"
        android:layout_height="0dp">

<!--        nav_a-->
        <LinearLayout

            android:id="@+id/pgA"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:text="Home"
                    android:textSize="28sp"
                    android:textColor="#FF383632"
                    android:fontFamily="serif"
                    android:textStyle="italic|bold"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <TextView
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:id="@+id/saveTv"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:backgroundTint="@color/black"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:background="@drawable/sh_r16"
                    android:fontFamily="serif"
                    android:textStyle="italic|bold"
                    android:layout_marginStart="20dp"
                    android:layout_width="76dp"
                    android:layout_height="32dp"/>
            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/timeCountTv"
                android:text="00:00"
                android:textSize="34sp"
                android:fontFamily="sans-serif-black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_marginTop="28dp"
                android:layout_width="256dp"
                android:layout_height="256dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:src="@mipmap/home_center_0"
                    android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:src="@mipmap/home_center_1"
                    android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:src="@mipmap/home_center_2"
                    android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="198dp"
                android:id="@+id/stateBg"
                android:background="@null"
                android:layout_height="198dp">

                <ImageView
                    android:id="@+id/state"
                    android:layout_gravity="center"
                    android:background="@mipmap/m_start"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            </FrameLayout>

            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

        </LinearLayout>
        <!--        nav_b-->
        <LinearLayout
            android:id="@+id/pgB"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:text="List"
                    android:textSize="28sp"
                    android:fontFamily="serif"
                    android:textStyle="italic|bold"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <FrameLayout
                android:layout_marginHorizontal="8dp"
                android:backgroundTint="#FFFFE2A9"
                android:background="@drawable/sh_r_top_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rv"
                    android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

            </FrameLayout>

        </LinearLayout>
        <!--        nav_c-->
        <FrameLayout
            android:id="@+id/pgC"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/set_bg_100"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ImageView>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:text="Set"
                    android:textSize="28sp"
                    android:fontFamily="serif"
                    android:textStyle="italic|bold"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            
            <TextView
                android:layout_marginTop="136dp"
                android:background="@mipmap/set_btn_bg_100"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:id="@+id/privacy"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="italic|bold"
                android:text="Privacy Policy"
                android:textSize="15sp"
                android:layout_marginHorizontal="25dp"
                android:layout_height="52dp">

            </TextView>

        </FrameLayout>

    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <TextView
            android:id="@+id/navA"
            android:layout_weight="1"
            android:text="Recording"
            android:paddingTop="8dp"
            android:drawableTop="@mipmap/nav_a"
            android:textSize="10sp"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFfff"
            android:fontFamily="sans-serif-black"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/navB"
            android:layout_weight="1"
            android:alpha="0.7"
            android:text="List"
            android:paddingTop="8dp"
            android:drawableTop="@mipmap/nav_b"
            android:textSize="10sp"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFfff"
            android:fontFamily="sans-serif-black"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/navC"
            android:layout_weight="1"
            android:text="Setting"
            android:paddingTop="8dp"
            android:alpha="0.7"
            android:drawableTop="@mipmap/nav_c"
            android:textSize="10sp"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFfff"
            android:fontFamily="sans-serif-black"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>